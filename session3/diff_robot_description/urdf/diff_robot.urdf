<?xml version="1.0"?>

<robot name="diff_robot">

    <material name="base_color">
        <color rgba="0 1 0 1"/>
    </material>
    <material name="wheel_color">
        <color rgba="0.5 0 1 1"/>
    </material>

    <link name="base_footprint"> 
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>


    <link name="base_link"> 

        <visual>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <material name = "base_color"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <mass value="5" />
            <inertia ixx="0.083" ixy="0" ixz="0" iyy="0.167" iyz="0" izz="0.217" />
        </inertial>
        <collision>
            <geometry>
                <box size="0.6 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
        </collision>
    </link>

    <link name="right_wheel_link"> 

        <visual>
            <geometry>
                <cylinder radius = "0.1" length = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name = "wheel_color"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="1" />
            <inertia ixx="0.0027" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.0027" />
        </inertial>
        <collision>
            <geometry>
                <cylinder radius = "0.1" length = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>       
        </collision>
    </link>

    <joint name="base_rwheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="-0.15 -0.225 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left_wheel_link"> 

        <visual>
            <geometry>
                <cylinder radius = "0.1" length = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name = "wheel_color"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="1" />
            <inertia ixx="0.0027" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.0027" />
        </inertial>
        <collision>
           <geometry>
                <cylinder radius = "0.1" length = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
        </collision>
    </link>
    <joint name="base_lwheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="-0.15 0.225 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

   <link name="caster_wheel_link"> 

        <visual>
            <geometry>
                <sphere radius = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name = "wheel_color"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.5" />
            <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005" />
        </inertial>
        <collision>
            <geometry>
                <sphere radius = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
    </link>

    <joint name="base_cwheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel_link"/>
        <origin xyz="0.2 0 -0.05" rpy="0 0 0"/>
    </joint>

<gazebo>
    <plugin name="diff_drive_controller"
    filename="libgazebo_ros_diff_drive.so">
<!-- Update rate in Hz -->
        <update_rate>50</update_rate>
<!-- wheels -->
        <left_joint>base_lwheel_joint</left_joint>
        <right_joint>base_rwheel_joint</right_joint>
<!-- kinematics -->
        <wheel_separation>0.45</wheel_separation>
        <wheel_diameter>0.2</wheel_diameter>
<!-- output -->
        <publish_odom>true</publish_odom>
        <publish_odom_tf>true</publish_odom_tf>
        <publish_wheel_tf>true</publish_wheel_tf>
        <odometry_topic>odom</odometry_topic>
        <odometry_frame>odom</odometry_frame>
        <robot_base_frame>base_footprint</robot_base_frame>
    </plugin>
</gazebo>

<gazebo reference="base_link">
<material>Gazebo/Green</material>
</gazebo>

<gazebo reference="right_wheel_link">
<material>Gazebo/Purple</material>
</gazebo>

<gazebo reference="left_wheel_link">
<material>Gazebo/Purple</material>
</gazebo>

<gazebo reference="caster_wheel_link">
<material>Gazebo/Purple</material>
<mu1 value="0.1" />
<mu2 value="0.1" />
</gazebo>


</robot>