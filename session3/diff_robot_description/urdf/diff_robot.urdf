<?xml version="1.0"?>

<robot name="diff_robot">

    <material name="base_color">
        <color rgba="0 1 0 1"/>
    </material>
    <material name="wheel_color">
        <color rgba="0.5 0 1 1"/>
    </material>

    <link name="base_footprint"> 
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>


    <link name="base_link"> 

        <visual>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <material name = "base_color"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <mass value="5" />
            <inertia ixx="0.083" ixy="0" ixz="0" iyy="0.167" iyz="0" izz="0.217" />
        </inertial>
        <collision>
            <geometry>
                <box size="0.6 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
        </collision>
    </link>

    <link name="right_wheel_link"> 

        <visual>
            <geometry>
                <cylinder radius = "0.1" length = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name = "wheel_color"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="1" />
            <inertia ixx="0.0027" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.0027" />
        </inertial>
        <collision>
            <geometry>
                <cylinder radius = "0.1" length = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>       
        </collision>
    </link>

    <joint name="base_rwheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="-0.15 -0.225 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left_wheel_link"> 

        <visual>
            <geometry>
                <cylinder radius = "0.1" length = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name = "wheel_color"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="1" />
            <inertia ixx="0.0027" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.0027" />
        </inertial>
        <collision>
           <geometry>
                <cylinder radius = "0.1" length = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
        </collision>
    </link>
    <joint name="base_lwheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="-0.15 0.225 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

   <link name="caster_wheel_link"> 

        <visual>
            <geometry>
                <sphere radius = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name = "wheel_color"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.5" />
            <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005" />
        </inertial>
        <collision>
            <geometry>
                <sphere radius = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
    </link>

    <joint name="base_cwheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel_link"/>
        <origin xyz="0.2 0 -0.05" rpy="0 0 0"/>
    </joint>

    <link name="lidar_link"> 

        <visual>
            <geometry>
                <cylinder radius = "0.06" length = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name = "wheel_color"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius = "0.06" length = "0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.5" />
            <inertia ixx="0.0011083" ixy="0" ixz="0" iyy="0.0011083" iyz="0" izz="0.0018" />
        </inertial>
    </link>

    <joint name="base_lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="lidar_link"/>
        <origin xyz="0 0 0.225" rpy="0 0 0"/>
    </joint>



    <link name="imu_link"> 

        <visual>
            <geometry>
                <box size="0.05 0.05 0.02"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name = "wheel_color"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.05 0.02"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.5" />
            <inertia ixx="0.0002417" ixy="0" ixz="0" iyy="0.0002417" iyz="0" izz="0.0004167" />
        </inertial>
    </link>


    <joint name="base_imu_joint" type="fixed">
        <parent link="base_link"/>
        <child link="imu_link"/>
        <origin xyz="0 0 0.01" rpy="0 0 0"/>
    </joint>



<gazebo reference="lidar_link">
    <sensor name="laser" type="ray">
        <pose>0 0 0 0 0 0</pose>
        <visualize>false</visualize>
        <update_rate>10</update_rate>
        <ray>
            <scan>
                <horizontal>
                    <samples>400</samples>
                    <resolution>0.9</resolution>
<!--(max_angle-min_angle)/samples * resolution -->
                    <min_angle>-3.14159</min_angle>
                    <max_angle>3.14159</max_angle>
                </horizontal>
            </scan>
            <range>
                <min>0.15</min>
                <max>12.0</max>
                <resolution>0.5</resolution>
            </range>
            <noise>
                <type>gaussian</type>
                <mean>0.0</mean>
                <stddev>0.01</stddev>
            </noise>
        </ray>
        <plugin name="scan" filename="libgazebo_ros_ray_sensor.so">
            <output_type>sensor_msgs/LaserScan</output_type>
            <frame_name>lidar_link</frame_name>
        </plugin>
    </sensor>
</gazebo>

<gazebo reference="imu_link">
    <gravity>true</gravity>
    <sensor name="imu_sensor" type="imu">
        <always_on>true</always_on>
        <update_rate>100</update_rate>
        <visualize>true</visualize>
        <topic>"imu"</topic>
        <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
            <topicName>imu</topicName>
            <bodyName>imu_link</bodyName>
            <updateRateHZ>100.0</updateRateHZ>
            <gaussianNoise>0.0</gaussianNoise>
            <xyzOffset>0 0 0</xyzOffset>
            <rpyOffset>0 0 0</rpyOffset>
            <frameName>imu_link</frameName>
            <initialOrientationAsReference>false</initialOrientationAsReference>
        </plugin>
        <pose>0 0 0 0 0 0</pose>
    </sensor>
</gazebo>

<gazebo>
    <plugin name="diff_drive_controller"
    filename="libgazebo_ros_diff_drive.so">
<!-- Update rate in Hz -->
        <update_rate>50</update_rate>
<!-- wheels -->
        <left_joint>base_lwheel_joint</left_joint>
        <right_joint>base_rwheel_joint</right_joint>
<!-- kinematics -->
        <wheel_separation>0.45</wheel_separation>
        <wheel_diameter>0.2</wheel_diameter>
<!-- output -->
        <publish_odom>true</publish_odom>
        <publish_odom_tf>true</publish_odom_tf>
        <publish_wheel_tf>true</publish_wheel_tf>
        <odometry_topic>odom</odometry_topic>
        <odometry_frame>odom</odometry_frame>
        <robot_base_frame>base_footprint</robot_base_frame>
    </plugin>
</gazebo>

<gazebo reference="base_link">
<material>Gazebo/Green</material>
</gazebo>

<gazebo reference="right_wheel_link">
<material>Gazebo/Purple</material>
</gazebo>

<gazebo reference="left_wheel_link">
<material>Gazebo/Purple</material>
</gazebo>

<gazebo reference="caster_wheel_link">
<material>Gazebo/Purple</material>
<mu1 value="0.1" />
<mu2 value="0.1" />
</gazebo>

<gazebo reference="lidar_link">
<material>Gazebo/Purple</material>
</gazebo>

<gazebo reference="imu_link">
<material>Gazebo/Purple</material>
</gazebo>

</robot>